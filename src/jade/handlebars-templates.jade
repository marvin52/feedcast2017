script(type="text/x-handlebars-template" id="category-link").
	<a class="mdl-navigation__link" href="#" data-category-id="0"> Todos os Podcasts </a>
	{{#each this}}
		<a class="mdl-navigation__link" href="#" data-category-id="{{ this.id }}"> {{ this.name }} </a>
	{{/each}}

script(type="text/x-handlebars-template" id="podcasts-by-category").
	{{#each this}}
	<div class="demo-card-square mdl-card mdl-shadow--2dp">
		<div class="mdl-card__title mdl-card--expand">
			<div class="background-podcast-card" style="background-image: url({{image}})"></div>
			<h2 class="mdl-card__title-text">{{name}}</h2>
		</div>
		<div class="mdl-card__supporting-text">
			<p>{{truncate summary 90}}</p> 
		</div>
		<div class="mdl-card__actions mdl-card--border">
			<a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect btn-podcast-load" podcast-feed="{{feed}}" podcast-id="{{id}}"> Ver Podcasts </a>
		</div>
	</div>
	{{/each}}

script(type="text/x-handlebars-template" id="podcast-list").
	<h3 class="title-podcast-list">{{channel.name}}</h3>
	<table class="podcast-list-all">
		<tbody>
		{{#each podcasts}}
		  <tr class="tr-podcast">
		  	<td class="img-podcast">
				<img src="{{channel_img}}" width="50" height="50"/>
		  	</td>
			<td class="name-podcast">
				<p>{{name}}</p>
			</td>
			<td class="control-podcast">
				<a class="play-podcast" href="#" mp3-href="{{url}}" json-obj="{{ json this }}">
					<i class="fa fa-play"></i>
				</a>
				<a href="{{url}}" download>
					<i class="fa fa-download"></i>
				</a>
			</td>
		  </tr>
		{{/each}}
		</tbody>
	</ul>